<div class="form">
<h2>Login</h2>

<%= form_tag do %>
  <div class='field'>
    <%= label_tag 'name' %>
    <%= text_field_tag 'name' %>
  </div>
  <div class='field'>
    <%= label_tag 'password' %>
    <%= password_field_tag 'password' %>
  </div>
  <div class='field'>
    <%= submit_tag 'Login', :class => 'btn btn-inverse' %>
  </div>
<% end %>
</div>